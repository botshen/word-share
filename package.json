{
  "name": "word-share",
  "displayName": "Word share",
  "version": "0.0.1",
  "description": "Edit and preview selected text then download as an image.",
  "author": "Shen Xin. <botshen@zgbj@gmail.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.10.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@uiw/react-codemirror": "^4.22.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.1",
    "downloadjs": "^1.4.7",
    "html-to-image": "^1.11.11",
    "html2canvas": "^1.4.1",
    "plasmo": "0.86.3",
    "re-resizable": "^6.9.16",
    "react": "18.2.0",
    "react-codemirror2": "^8.0.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.2.1",
    "react-quill": "^2.0.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/downloadjs": "^1.4.6",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "matches": [
          "<all_urls>"
        ],
        "resources": [
          "tabs/App.html"
        ]
      }
    ]
  }
}
